{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "incremental": true,
    "baseUrl": "src",
    "paths": {
      "*": ["*"]
    },
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": false,
    "importHelpers": true,
    "noEmit": false,
    "outDir": "lib",
    "strict": true,
    "lib": [
      "ESNext"
    ],
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      },
      {
        "transform": "@zoltu/typescript-transformer-append-js-extension/output/index.js",
        "after": true
      }
    ]
  },
  "include": [
    "src/**/*.ts",
    "env.d.ts"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/__helper__/**"
  ],
  "ts-node": {
    "preferTsExts": true,
    "require": [
      "tsconfig-paths/register"
    ]
  }
}
