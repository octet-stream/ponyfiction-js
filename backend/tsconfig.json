{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": false,
    "importHelpers": true,
    "noEmit": false,
    "outDir": "lib",
    "strict": true,
    "lib": [
      "ESNext"
    ],
    "paths": {
      "*": [
        "*"
      ]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      },
      {
        "transform": "@zoltu/typescript-transformer-append-js-extension/output/index.js",
        "after": true
      }
    ]
  },
  "include": [
    "src/**/*.ts",
    "env.d.ts"
  ]
}
