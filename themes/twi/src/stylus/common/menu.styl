.hamburger-button-container,
.more-vert-container
  position relative
  width 24px
  height 56px
  .hamburger-button-icon,
  .more-vert-icon
    position absolute
    width 24px
    height 24px
    align(center)
    cursor pointer
    fill white
    
.more-vert-container
  padding 0 16px

ul.nav-vert
  width 220px
  list-style none
  margin 0
  padding 0
  li
    opacity 0
    display block
    a
      display block
      text-decoration none
      color maneStroke
      padding 0 16px

.nav
  &-header-right
    cursor pointer
    position relative

  &-more-vert-nav
    overflow hidden
    position absolute
    top 16px
    right 12px
    width 220px // 220px when menu opened
    height 0
    padding 0
    background white
    color maneStroke
    box-shadow 1px 2px 5px rgba(black, .26)
    border-radius 2px
    z-index 1

  &-menu-container
    cf()
    position fixed
    top 56px
    bottom 0
    left -322px
    width navMenuWidth
    background #fff
    box-shadow 2px 0 5px rgba(black, .26)
    padding 0
    user-select none
    z-index 1

  &-profile-link,
  &-link
    overflow hidden
    display block
    cf()
    color maneFillBase
    text-decoration none
    
  &-profile-link
    color white
    font-weight bold

  &-user-info-bg
    cf()
    background transparent url('/img/user/twilights-library.svg') center center no-repeat
    background-size cover
    padding 56px 0 22px

  &-user-info-avatar,
  &-icn
    overflow hidden
    width 48px
    height 48px
    margin 0 10px
    border white solid 2px
    border-radius 100%
    background white
    img, svg
      width 100%
      height 100%
  &-icn
    position relative
    width 48px
    height 52px
    border none
    border-radius 0
    svg
      fill maneFillBase
      width 28px
      align(center(28px))

  &-user-info-username,
  &-link-label
    user-select none
    width navMenuWidth - 74
    line-height 54px

  &-user-info-username
    color white