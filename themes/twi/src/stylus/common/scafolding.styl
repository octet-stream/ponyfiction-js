html, body
  width 100%
  height 100%
  box-sizing border-box
  font-family: 'Roboto', sans-serif;
  -webkit-font-smoothing antialiased

a
  &, &:visited, &:hover, &:active
    color maneFillBase
    text-decoration none

input, textarea, button,
div, span, svg
  &:focus, &:active
    outline none

.fl
  float left

.fr
  float right

.header-container,
.main-container,
.footer-container
  center(1280px)
  cf()

header
  position fixed
  top 0
  left 0
  right 0
  height 56px
  line-height 56px
  background maneFillViolet
  color white
  font-size 110%
  box-shadow 0 2px 5px rgba(black, .26)
  user-select none
  z-index 1
  
.header-nav
  cursor pointer
  padding 0 16px

.header-clearfix
  width 100%
  height 56px // like header height

.page-title-container
  a
    display block
    color white
    text-decoration none

// .main-container
//   margin-top 56px

.page-no-content
  align(center)
  user-select none
  color #c0c0c0
  font-weight 700
  text-align center
  padding 16px 0
  &-image
    .twilight-cutiemark-icon
      width 100px
      height 100px
      .twilight-cutiemark-stars,
      .twilight-cutiemark-star
        fill #c0c0c0

.fiction-content
  text-align justify

.fiction
  &-nav
    height 92px
    background maneFillViolet
    margin-top 20px;
    cf()
    a
      display block
      text-decoration none
  &-prev-chapter
    .arrow-back-icon
      width 24px
      height 24px
      fill white
