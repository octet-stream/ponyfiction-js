button-colored(bgc, fgc)
  background bgc
  color fgc

.button
  position relative
  display inline-block
  user-select none
  padding .5rem 1.5rem
  cursor pointer
  text-transform uppercase
  text-align center
  border none
  border-radius 2px

  &-violet
    button-colored(maneFillViolet, white)

  &-white
    button-colored(white, maneStroke)

  &-auth
    display block
    button-colored(maneFillViolet, white)
    &-confirm
      width 200px
      color maneStroke
      background white
      margin 0 auto 20px
      text-decoration none

  &-raised
    border none
    box-shadow 0 2px 5px 0 rgba(black, 0.26)
    transition box-shadow 0.2s cubic-bezier(0.4, 0, 0.2, 1)
    transition-delay 0.2s

    &-white
      button-colored(white, maneFillViolet)

    &-violet
      button-colored(maneFillViolet, white)

  &-floating
    overflow hidden
    width 45px
    height 45px
    border-radius 100%
    padding 0
    box-shadow 0 2px 5px 0 rgba(black, 0.16), 0 2px 10px 0 rgba(black ,0.12)
    transition all .3s ease-out

    &:hover
      box-shadow: 0 5px 11px 0 rgba(black, .18), 0 4px 15px 0 rgba(black, .15)

  // Styles for component ActionButton
  &-action
    position relative
    display inline-block
    user-select none
    padding .5rem 0
    cursor pointer
    text-transform uppercase
    text-align center
    &-label
      padding .5rem 0 .5rem 1.5rem

    &-icon
      position relative
      padding .5rem 1.3rem .5rem

      // &::before
      //   content ""
      //   position absolute
      //   left 6px
      //   top 9.5px
      //   width 1px
      //   height 14px
      //   background rgba(white, .7)

      svg
        right .75rem
        // right .49rem
        position absolute
        width 20px
        height 20px
        fill white

    &-list
      display none // tmp
      position absolute
      overflow hidden
      top 40px
      width 157px
      box-sizing border-box
      text-transform none
      text-align left
      background white
      color #353535

      ul
        list-style none
        padding 0
        margin 0
