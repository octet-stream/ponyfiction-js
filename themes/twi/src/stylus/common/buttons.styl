button-colored(bgc, fgc)
  background bgc
  color fgc

.button
  position relative
  display inline-block
  overflow hidden
  user-select none
  padding 0 2rem
  cursor pointer
  text-transform uppercase
  line-height 36px
  text-align center

  &-white
    button-colored(white, maneStroke)

  &-auth
    display block
    button-colored(maneFillViolet, white)
    &-confirm
      width 200px
      color maneStroke
      background white
      margin 0 auto 20px
      text-decoration none

  &-raised
    border none
    box-shadow 0 2px 5px 0 rgba(black, 0.26)
    transition box-shadow 0.2s cubic-bezier(0.4, 0, 0.2, 1)
    transition-delay 0.2s

    &-violet
      button-colored(maneFillViolet, white)
