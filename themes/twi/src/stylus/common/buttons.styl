button-colored(bgc, fgc)
  background bgc
  color fgc

.button
  position relative
  display inline-block
  overflow hidden
  user-select none
  padding 0 2rem
  cursor pointer
  text-transform uppercase
  line-height 36px
  text-align center
  border none
  border-radius 2px

  &-violet
    button-colored(maneFillViolet, white)

  &-white
    button-colored(white, maneStroke)

  &-auth
    display block
    button-colored(maneFillViolet, white)
    &-confirm
      width 200px
      color maneStroke
      background white
      margin 0 auto 20px
      text-decoration none

  &-raised
    border none
    box-shadow 0 2px 5px 0 rgba(black, 0.26)
    transition box-shadow 0.2s cubic-bezier(0.4, 0, 0.2, 1)
    transition-delay 0.2s

    &-white
      button-colored(white, maneFillViolet)

    &-violet
      button-colored(maneFillViolet, white)

  &-floating
    width 45px
    height 45px
    border-radius 100%
    padding 0
    box-shadow 0 2px 5px 0 rgba(black, 0.16), 0 2px 10px 0 rgba(black ,0.12)
    // will-change opacity, transform
    transition all .3s ease-out

    &:hover
      box-shadow: 0 5px 11px 0 rgba(black, .18), 0 4px 15px 0 rgba(black, .15)
