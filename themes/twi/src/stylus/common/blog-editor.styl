.blog-editor
  &-field,
  &-preview
    box-sizing border-box
    width 50%
    height 100%

  &-field
    overflow-y auto
    padding 8px 0 6px 12px
    box-sizing border-box

    .ReactCodeMirror,
    .CodeMirror
      height 100%
      box-sizing border-box

  &-preview
    overflow-y auto
    font-size 80%
    padding 0 16px
    word-wrap break-word
    border-left rgba(black, .150) solid 1px

    img
      max-width 100%

  &-field
    &-title
      // line-height 28px
      border-bottom rgba(black, .150) solid 1px
      box-sizing border-box

      input
        width 100%
        padding 14px 16px
        border 0
        box-sizing border-box

    // &-content
    //   // padding 10px 16px
    //   .ReactCodeMirror,
    //   .CodeMirror
    //     height inherit

  &-controls
    cf()
    position relative
    height: 48px
    // line-height: 50px
    border-top rgba(black, .150) solid 1px
    box-sizing border-box
    z-index 2
