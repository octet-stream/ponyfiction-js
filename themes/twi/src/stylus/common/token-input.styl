.token-input
  &-container
    position relative

  &-list
    display none
    position absolute
    background white
    width 100%
    line-height 42px
    z-index 3

    &.active
      display block

    ul
      list-style none
      padding 0
      margin 0

    li
      display block
      padding 8px 16px

      &:hover
        cursor pointer
