form
  cf()

.input-container
  cf()
  position relative
  padding 12px 0
  margin 6px 0
  line-height 24px
  font-size 18px
  user-select none

.input-label
  position absolute
  top 18px
  left 6px
  padding 0 2px
  pointer-events none
  transition 0.2s ease all
  z-index -1

.form-input
  background transparent
  border none
  padding 6px 8px
  box-sizing border-box
  border-bottom maneFillViolet solid 1px
  &::placeholder
    color maneFillViolet

.form-input:focus ~ .input-label,
.form-input:valid ~ .input-label
  top -8px
  font-size 12px
  color maneFillViolet
  z-index 2

.field-underscore, textarea
  position relative
  display block
  width 100%

  &::before, &::after
    position absolute
    content ''
    height 2px
    width 0
    bottom 0px
    background maneFillViolet
    transition 0.2s ease all


  &::before
    left 50%

  &::after
    right 50%

// Fix for textarea
textarea
  .field-underscore
    &::before, &::after
      bottom -6px

.form-input:focus
  ~ .field-underscore
      &::before, &::after
        width 50%

/**
 * Blog form
 **/
.blog
  &-form
    width 100%
    height 100%

    &-textarea
      width 100%
      height 500px
      resize none
      word-wrap break-word
      border none

  &-form-container,
  &-view-container
    position relative
    width 50%
    padding 20px 10px
    box-sizing border-box

  &-view-container
    word-wrap break-word

/**
 * Style for story editor
 */
.story-editor
  &-container
    width 100%
    padding 20px 26px
    box-sizing border-box

    input, textarea
      width 100%
      color #353535
      padding 6px 8px
      box-sizing border-box
      border none
      border-bottom solid rgba(maneFillViolet, 0.3) 1px

    textarea
      resize none

  &-field-container
    // cf()
    color #353535

  &-synopsis,
  &-info
    height 128px
