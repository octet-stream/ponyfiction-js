form
  cf()

.input-container
  position relative
  padding 4px 0
  margin 14px 0
  line-height 24px
  font-size 18px

.input-label
  position absolute
  top 0
  padding 0 2px
  pointer-events none
  transition 0.2s ease all
  z-index -1

.form-input
  background transparent
  border none
  border-bottom maneFillViolet solid 1px
  &::placeholder
    color maneFillViolet

.form-input:focus ~ .input-label,
.form-input:valid ~ .input-label
  top -20px
  font-size 12px
  color maneFillViolet

/**
 * Blog form
 **/
.blog
  &-form
    width 100%
    height 100%

    &-textarea
      width 100%
      height 500px
      // overflow hidden
      resize none
      word-wrap break-word
      border none

  &-form-container,
  &-view-container
    position relative
    width 50%
    padding 20px 10px
    box-sizing border-box
  
  &-view-container
    word-wrap break-word
