@import "jeet"
@import "rupture"
@import "reset"
@import "variables"

.container
  align(center)
  width 300px
  background bg
  box-sizing border-box

.title
  background maneFillViolet
  color white
  font-weight bold
  line-height 46px
  padding 0 16px

.fields
  &-container
    padding 10px 16px

.field-container
  padding 6px 0

  &, input
    box-sizing border-box

  input
    width 100%
    padding 8px 10px

  button
    width 100%

.links
  text-align center


+above(900px)
  .container
    width 900px

  .title
    display none

  .fields
    cf()

  .field-container
    float left
    padding 0px 6px

    input
      width 300px

    button
      width auto

  .links
    cf()
    width 312px * 2
    padding 0
    text-align left

    .field-container
      padding 0 6px
      width 300px

      a
        color #777
        font-size 85%

      // Hotfix ._.
      &:last-child
        padding-left 18px
