@import "jeet"
@import "rupture"
@import "variables"
@import "reset"
@import "func"

.container
  height 100%
  box-sizing border-box

.main
  cf()
  height 100%
  box-sizing border-box

.cover
  cardBase()
  cursor pointer
  position relative
  max-width 412px
  height 614px
  text-align center
  border none
  background white

  // Set horisontal position to center when viewport width
  //   between the following values
  +between(413px, 412px * 2)
    margin 0 auto

  +above(413px)
    width 412px
    // border #777 dashed 1px

  &-label
    align(center)
    text-align center
    color #777
    text-transform uppercase

.details
  cardBase()
  width 100%
  box-sizing border-box

  +above(413px)
    margin-left 16px

  .field
    cf()
    box-sizing border-box

  input, textarea
    width 100%
    box-sizing border-box
    padding 8px 10px
    border none

+above(413px * 2)
  .cover, .details
    width 412px
    float left
