@import "jeet"
@import "rupture"
@import "variables"
@import "reset"

.container
  height 100%
  box-sizing border-box

.main
  cf()
  height 100%
  box-sizing border-box

.cover
  cursor pointer
  position relative
  max-width 412px
  height 614px
  text-align center

  // Set horisontal position to center when viewport width
  //   between the following values
  +between(412px, 412px * 2)
    margin 0 auto

  +above(412px)
    width 412px
    border #777 dashed 1px

  &-label
    align(center)
    text-align center
    color #777
    text-transform uppercase

.details
  +above(412px)
    padding-left 16px
    box-sizing border-box

+above(412px * 2)
  .cover, .details
    float left
