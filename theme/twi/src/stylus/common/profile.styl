.profile
  &-cover-container
    position relative
    height 350px

  &-main-info
    cf()
    position absolute
    left 20px
    right 20px
    bottom -(128px / 2)

  &-avatar
    overflow hidden
    width 128px
    height 128px
    border white solid 4px
    border-radius 100%
    box-shadow 0px 2px 6px 2px rgba(black, .26)
    background white
    img
      width 100%

  &-label
    margin (128px - 54) 0 0 0
    padding 10px 16px

    &-name
      color #777

.cover
  width 100%
  height 100%
  backround-color white
  background-position center center
  background-repeat no-repeat
  background-size cover
  &-twilights-library
    overflow hidden
    background-image url('/img/user/twilights-library.svg')
  &-twilights-fireplace-day
    background-image url('/img/user/twilights-fireplace-day.svg')
  &-twilights-fireplace-night
    background-image url('/img/user/twilights-fireplace-night.svg')
