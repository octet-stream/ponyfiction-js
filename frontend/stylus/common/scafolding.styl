html, body
  font-family: 'Roboto', sans-serif;
  -webkit-font-smoothing antialiased

.fl
  float left

.fr
  float right

.header-container,
.main-container
  center(1440px, 16px)
  cf()

header
  position fixed
  top 0
  left 0
  right 0
  height 56px
  line-height 56px
  background maneFillViolet
  color white
  font-size 110%
  box-shadow 0 2px 5px rgba(black, .26)
  z-index 1

.hamburger-button-container
  position relative
  width 24px
  height 56px
  .hamburger-button-icon
    position absolute
    width 24px
    height 24px
    align(center)
    cursor pointer
    fill white

// Menu
.nav-menu-container
  position fixed
  top 56px
  bottom 0
  left -322px
  width 320px
  background #fff
  box-shadow 2px 0 5px rgba(black, .26)
  z-index 1
  div
    margin-top 4px
// End

.page-title-container
  col(.8)
  padding-left 20px

.main-container
  margin-top 60px

.page-no-content
  align(center)
  color #c0c0c0
  font-weight 700
  text-align center
  padding 16px 0
  &-image
    .twilight-cutiemark-icon
      width 100px
      height 100px
      .twilight-cutiemark-stars,
      .twilight-cutiemark-star
        fill #c0c0c0

.fiction-content
  text-align justify

.fiction
  &-nav
    height 92px
    background maneFillViolet
    margin-top 20px;
    cf()
    a
      display block
      text-decoration none
  &-prev-chapter
    .arrow-back-icon
      width 24px
      height 24px
      fill white