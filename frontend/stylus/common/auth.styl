.auth
  &-container
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    background maneFillViolet
    color white

  &-form-container
    width 100%
    align(center)

  &-form-box
    center(300px, 16px)
    cf()
    user-select none

  &-header
    text-align center
    font-size 110%
    padding-bottom 12px
    &-icon svg
      width 100%
      height 100px
    a
      display block
      width 100%
      text-decoration none

  &-title
    font-weight normal
    color white

  &-form-space
    input
      width 100%

.auth-input
  width 100%
  border-bottom-color white
