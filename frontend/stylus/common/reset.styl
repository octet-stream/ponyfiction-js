@import "variables"
@import "normalize.css"

html, body
  width 100%
  height 100%
  box-sizing border-box
  font-family "Roboto", sans-serif
  -webkit-font-smoothing antialiased
  font-size 14px
  background bg
  box-sizing border-box

input, textarea,
button, div, span
  &:focus, &:active
    outline none

textarea
  resize none

button
  cursor pointer

a
  text-decoration none

  &:hover
    text-decoration underline

  &, &:hover
    color maneStroke

:global
  #twi-root-container
    width 100%
    height 100%
