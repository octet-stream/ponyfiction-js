{
  "plugins": [
    "ava"
  ],
  "extends": [
    "@octetstream",
    "plugin:ava/recommended"
  ],
  "rules": {
    "no-shadow": 0,
    "indent": ["error", 2, {
      "MemberExpression": "off"
    }],

    "ava/no-ignored-test-files": ["error", {
      "files": [
        "src/test/unit/**/*.{js,jsx}"
      ]
    }],

    "import/no-unresolved": 0
  }
}
