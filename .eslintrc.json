{
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": false,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "babel",
    "react"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "rules": {
    "quotes": ["warn", "double"],
    "linebreak-style": ["error", "unix"],
    "eol-last": ["error", "unix"],
    "require-yield": 0,
    "semi": ["warn", "never"],
    "camelcase": ["error"],
    "indent": ["warn", 2, {
      "SwitchCase": 1
    }],
    "no-unused-vars": ["warn"],
    "no-console": 0,
    "no-constant-condition": 0,
    "no-multi-spaces": ["warn"],
    "guard-for-in": ["warn"],
    "no-empty": ["error"],
    "no-global-assign": ["error"],
    "no-eval": ["error"],
    "no-throw-literal": ["error"],
    "yoda": ["error"],
    "no-with": ["error"],
    "no-new-require": ["error"],
    "max-len": [
      "error", {
        "code": 80
      }
    ],
    "no-tabs": ["error"],
    "no-trailing-spaces": ["error"],
    "no-inner-declarations": 0,
    "no-class-assign": 0,
    "yield-star-spacing": ["error", "after"],
    "object-curly-spacing": ["warn", "never"],
    "array-bracket-spacing": ["warn", "never"],
    "arrow-parens": ["warn", "as-needed"],
    "prefer-const": ["error", {
      "destructuring": "any",
      "ignoreReadBeforeAssign": false
   }]
  }
}
