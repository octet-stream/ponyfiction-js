{
  "parser": "babel-eslint",
  "plugins": [
    "ava"
  ],
  "extends": [
    "@octetstream",
    "plugin:ava/recommended"
  ],
  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  },
  "rules": {
    "no-shadow": 0,
    "indent": ["error", 2, {
      "MemberExpression": "off"
    }],

    "ava/no-ignored-test-files": ["error", {
      "files": [
        "src/test/unit/**/*.{js,jsx}"
      ]
    }]
  }
}
